<header class="l-header">
  <div class="l-header__content"> 
    <div class = "l-header__content__inner">
      <%= link_to image_tag("logo-header.svg"), root_path, class: "logo" %>
      <nav class="l-header__content__inner__nav">
        <% if user_signed_in? %>
          <%# ログインしている時 %>
          <%= link_to "mypage", user_path(current_user.id), class: "l-header__content__inner__nav__item" %>
          <%= link_to "log out", destroy_user_session_path, method: :delete, class: "l-header__content__inner__nav__item" %>
        <% else %>
          <%# ログインしていない時 %>
          <%= link_to "sign up", new_user_registration_path, class: "l-header__content__inner__nav__item" %>
          <%= link_to "log in", user_session_path, class: "l-header__content__inner__nav__item" %>
          <%= link_to 'guest', users_guest_sign_in_path, method: :post, class: "l-header__content__inner__nav__item" %>
        <% end %>
      </nav>
    </div>
  </div>

  <div class = "l-header__mobile">
    <div class="l-header__mobile__cover"></div>
    <%= link_to image_tag("logo-header.svg"), root_path, class: "logo" %>
    <nav class = "l-header__mobile__nav">
      <% if user_signed_in? %>
        <%# ログインしている時 %>
        <%= link_to "mypage", user_path(current_user.id), class: "l-header__mobile__nav__item" %>
        <%= link_to "log out", destroy_user_session_path, method: :delete, class: "l-header__mobile__nav__item" %>
      <% else %>
        <%# ログインしていない時 %>
        <%= link_to "sign up", new_user_registration_path, class: "l-header__mobile__nav__item" %>
        <%= link_to "log in", user_session_path, class: "l-header__mobile__nav__item" %>
        <%= link_to 'guest', users_guest_sign_in_path, method: :post, class: "l-header__mobile__nav__item" %>
      <% end %>
      <a class = "l-header__mobile__nav__btnClose">close</a>
    </nav>
    <button class = "l-header__mobile__btnMenu" data-role="page">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>


    
    

<script>
  // スマートフォンにおけるメニュー表示
  $(function() {
      // ハンバーガーメニュー
      $('.l-header__mobile__btnMenu').click(function() {
          $('.l-header').toggleClass('header-open');
      });

      // ハンバーガーメニューの中のクローズボタン
      $('.l-header__mobile__nav__btnClose').click(function() {
        $('.l-header').toggleClass('header-open');
      });
  });
</script>